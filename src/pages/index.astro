---
import MainLayout from "@/layouts/MainLayout.astro";
import Reviews from "@/sections/Reviews.astro";
import Hero from "@/sections/Hero.astro";
import Comparative from "@/sections/Comparative.astro";
import Content from "@/sections/Content.astro";
import Presentation from "@/sections/Presentation.astro";
import Faq from "@/sections/Faq.astro";
---

<MainLayout
	title="Curso Astro - Aprende El Framework Web Del Futuro"
	description=`
		Aprende a crear aplicaciones web modernas con Astro, el framework web del futuro. En este curso aprenderás a crear aplicaciones web modernas, rápidas y seguras con Astro.`
	image="/meta_img.png"
>
	<Hero />
	<Reviews />
	<Comparative />
	<Content />
	<Presentation />
	<Faq />
	<script src="https://getlaunchlist.com/js/widget.js" defer></script>
	<div class="flex justify-center items-center">
		<div
			id="launchlist"
			class="launchlist-widget"
			data-key-id="wZXfTs"
			data-height="180px"
		>
		</div>
	</div>
</MainLayout>
