---
interface Props {
    title: string;
    description: string;
}
const { title, description } = Astro.props;
---

<div class="bg-zinc-800 p-6 w-full max-w-[600px] mx-auto rounded space-y-1">
    <h3 class="text-white text-lg font-semibold">{title}</h3>
    <p class="text-zinc-400">
        {description}
    </p>
</div>
