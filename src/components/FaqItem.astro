---
import ArrowDown from "@/assets/arrow-down.astro";

interface Props {
    question: string;
    answer: string;
}

const { question, answer } = Astro.props;
---

<div class="bg-zinc-800 w-full max-w-[600px] mx-auto rounded pt-6 px-6">
    <div class="flex justify-between">
        <h3 class="text-lg font-bold -translate-y-2">
            {question}
        </h3>
        <ArrowDown class="w-5 h-5 cursor-pointer" />
    </div>
    <p faq-answer class="mt-2 max-h-[0px] overflow-hidden transition-all">
        {answer}
    </p>
</div>
