---

<section
    class="px-8 group flex flex-col items-center max-w-content-size mx-auto overflow-hidden [mask-image:_linear-gradient(to_right,_transparent_0,_white_128px,white_calc(100%-128px),_transparent_100%)]"
>
    <div class="relative flex overflow-x-hidden">
        <h2 class="sr-only">Reseñas</h2>
        <div
            class="py-12 animate-slide-left whitespace-nowrap flex lg:group-hover:[animation-play-state:paused]"
        >
            {
                reviews.map((review) => (
                    <Review src={review.avatar} user={review.user}>
                        {review.content}
                    </Review>
                ))
            }
        </div>

        <div
            class="absolute top-0 py-12 animate-slide-right whitespace-nowrap flex lg:group-hover:[animation-play-state:paused]"
            aria-hidden="true"
        >
            {
                reviews.map((review) => (
                    <Review src={review.avatar} user={review.user}>
                        {review.content}
                    </Review>
                ))
            }
        </div>
    </div>
</section>
